@{
    ViewBag.Title = "Paint With Friends";
}

@section head
{
    <script src="~/Scripts/jquery.signalR-2.0.1.js" type="text/javascript"></script>
    <script src="~/Scripts/knockout-3.0.0.js" type="text/javascript"></script>
    <script src="~/signalr/hubs"></script>
    @*<script src="~/scripts/foundation.min.js"></script>*@
    <script src="~/Scripts/index.js" type="text/javascript"></script>
}


<div class="container">

    <div class="row" >
        <div class="border-image">
            <img src="~/content/images/frame-bg-1200.jpg"  />
        </div>

        <div class="canvas-container">
            <div id="canvasDiv">
                <canvas id="canvas"  height="400" ></canvas>
            </div>
        </div>
       
    </div>

    <div class=" container-bottom">

        <div class="join-container">
            <input type="text" id="playerText" placeholder="Enter your name..." data-bind="value:playerName" class="small-4 columns" />
            <input type="button" value="clear" id="clearButton" class="small-4 columns  secondary button" />
            <input type="button" value="join" id="joinButton" class="small button small-4 columns" />
        </div>

        <p class="playerName">Welcome <span data-bind="text:playerName"></span></p>
        
        <div class="progress small-12 radius round" style="display:none;">
            <span class="meter" style="width: 100%"></span>
        </div>
        
        <div style="display:none;">
            <h2><span data-bind="text: guess"> </span></h2>
            <p>Guess: <input data-bind="value: guess" /></p>
        </div>
      </div>

    <div>
      
    </div>

</div>



<input type="button" value="clear" id="clearButton" />

<input type="text" id="playerText" />
<input type="button" value="join" id="joinButton" disabled="disabled" />
<input type="button" value="start" id="startButton" disabled="disabled" />
<p id="userText"></p>
<input type="text" id="guessText" />
<input type="button" value="guess" id="guessButton" />

