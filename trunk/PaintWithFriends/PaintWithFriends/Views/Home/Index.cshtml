@{
    ViewBag.Title = "Paint With Friends";
}

@section head
{
    <meta name="viewport" content="user-scalable=no, width=device-width, initial-scale=1, maximum-scale=1" />
    <script src="~/Scripts/jquery.signalR-2.0.1.js" type="text/javascript"></script>
    <script src="~/Scripts/knockout-3.0.0.js" type="text/javascript"></script>
    <script src="~/signalr/hubs"></script>
    @*<script src="~/scripts/foundation.min.js"></script>*@    
    <script src="~/Scripts/jquery.hammer.js" type="text/javascript"></script>
    <script src="~/Scripts/index.js" type="text/javascript"></script>


}

<div class="row top-row">
    <div class="medium-8 columns">
        <div class="canvas-container">
            <div class="border-image">
                <img src="~/content/images/frame-bg-1200.jpg" />
            </div>
            <div id="canvasDiv">
                <canvas id="canvas"></canvas>
            </div>
        </div>
    </div>
    <div class="medium-4 columns">
        <div class="panel medium-12 columns">
            <h4>Players</h4>
            <ul id="playerList"></ul>
        </div>

        <div class="join-container medium-12 columns">
            <div class="small-8 columns">
                <input type="text" id="playerText" placeholder="Name" data-bind="value: playerName" />
            </div>
            <div class="small-4 columns">
                <input type="button" value="join" id="joinButton" class="small button" />
            </div>
            <input type="button" value="clear" id="clearButton" class="small  secondary button" />

            <p class="playerName">Welcome <span data-bind="text: playerName"></span></p>

        </div>
    </div>
</div>

<div class="row container-bottom">

    <div class="progress small-8  radius round">
        <span class="meter" style="width: 100%"></span>
    </div>

    



    <h2><span data-bind="text: guess"></span></h2>

    <div class="small-4 columns">
        <input type="text" id="guessText" placeholder="It's a..." />
    </div>
    <div class="small-8 columns">
        <input type="button" value="guess" id="guessButton" class="small button" />
    </div>

    <input type="button" value="start" id="startButton" disabled="disabled" />

</div>



