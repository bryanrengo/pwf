@{
    ViewBag.Title = "Paint With Friends";
}

@section head
{
    <meta name="viewport" content="user-scalable=no, width=device-width, initial-scale=1, maximum-scale=1" />
    <script src="~/Scripts/jquery.signalR-2.0.1.js" type="text/javascript"></script>
    <script src="~/Scripts/knockout-3.0.0.js" type="text/javascript"></script>
    <script src="~/signalr/hubs"></script>
    <script src="~/Scripts/jquery.hammer.js" type="text/javascript"></script>
    <script src="~/Scripts/index.js" type="text/javascript"></script>


}

<div class="row top-row">
    <div class="medium-8 columns">
        <div >
            <div class="border-image">
                <img src="~/content/images/frame-bg-1200.jpg" />
            </div>
            <div id="canvasDiv" class="canvas-container" style="position:absolute;">
                <canvas id="canvas" style="position:relative;"></canvas>
            </div>
        </div>
    </div>
    <div class="medium-4 columns">
        <div class="panel medium-12 columns">
            <h4>Players</h4>
            <ul data-bind="foreach: players">
                <li>
                    <span data-bind="text: Name"></span>
                    <img src="" alt="isDrawer" data-bind="visible: IsDrawer" />
                </li>
            </ul>
        </div>

        <div class="join-container medium-12 columns">
            <form data-bind="submit: joinGame">
                <div class="small-8 columns">
                    <input type="text" data-bind="value: playerName" placeholder="Name" />
                </div>
                <div class="small-4 columns">
                    <input type="submit" value="join" data-bind="enable: isConnected" class="small button" />
                </div>
            </form>

            <input type="button" value="clear" data-bind="click: clearCanvas, visible: isPlaying" class="small secondary button" />

            <p class="playerName">Welcome <span data-bind="text: playerName"></span></p>
        </div>

        <div class="small-12 columns">
            <input type="button" value="start" data-bind="click: startGame, enable: isReady" class="large button small-12 columns" />
        </div>
    </div>
</div>

<div class="row container-bottom" data-bind="visible: false">

    <div class="progress small-8  radius round">
        <span class="meter" style="width: 100%"></span>
    </div>

    <h2><span data-bind="text: guess"></span></h2>

    <div class="small-4 columns">
        <input type="text" data-bind="value: guess" placeholder="It's a..." />
    </div>
    <div class="small-8 columns">
    </div>

</div>

<div class="row container-bottom">

    <div class="small-12 columns">
        <div id="chatDiv" style="overflow: auto; border: 1px gray solid; height:190px;">
            <ul data-bind="foreach: chats" style="list-style-type: circle;">
                <li>
                    <span data-bind="text: PlayerName"></span>: 
                <span data-bind="text: Message"></span>
                </li>
            </ul>
        </div>
    </div>
    
    <div class="small-12 columns"><span>&nbsp;</span></div>

    <form data-bind="submit: submitChat">

        <div class="small-4 columns">
            <input type="text" id="chatBox" data-bind="value: chat" />
        </div>

        <div class="small-8 columns">
            <input type="submit" value="enter" class="small button" />
            <input type="button" value="guess" data-bind="click: guessValue, enable: isPlaying" class="small button" />
        </div>

    </form>

</div>
