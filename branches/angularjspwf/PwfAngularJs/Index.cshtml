@using System.Web.Optimization
<!DOCTYPE html>
<html lang="en" ng-app="pwfApp">
<head>
    <meta charset="utf-8">
    <title>AngularJS App</title>
    @Styles.Render("~/css/app")
</head>
<body class="container">
    <nav class="navbar navbar-default" role="navigation" ng-controller="navController">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/">Home</a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li><a ng-class="{ active: isActive('/') }" href="~/">View1</a></li>
                    <li><a ng-class="{ active: isActive('/view2') }" href="~/view2">View2</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li><a ng-class="{ active: isActive('/login') }" href="~/login">Login</a></li>
                </ul>
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
    </nav>

    <div class="row">
        <div class="col-md-12" ng-view></div>
    </div>

    @Scripts.RenderFormat(
        "<script src=\"{0}\"></script>",
            "~/js/libs",
            "~/js/app")
</body>
</html>
